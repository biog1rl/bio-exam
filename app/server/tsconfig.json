{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "esnext",
		"moduleResolution": "Bundler",

		"outDir": "dist",
		"noEmit": false,

		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,

		"types": ["node"]
	},
	"include": ["src", "api"],
	"exclude": ["node_modules", "dist"]
}
