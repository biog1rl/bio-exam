# --- Common ---
NODE_ENV=development
PORT=4000
ALLOWED_ORIGIN=http://localhost:3000
DEBUG_ENV=1

# --- DB ---
DATABASE_URL=postgresql://itsdoc:itsdoc@127.0.0.1:55432/itsdoc?sslmode=disable

# --- Git push ---
GIT_PUSH_ENABLED=false
GITLAB_REPO=https://gitlab.example.com/your-org/your-repo.git
GITLAB_TOKEN=your-gitlab-token-here
GIT_DEFAULT_BRANCH=main
GIT_DEFAULT_COMMIT_MESSAGE=docs: update via its-doc

# --- Auth ---
ADMIN_LOGIN=admin
ADMIN_PASSWORD=change-me-in-production
ADMIN_BOOTSTRAP_LOGIN=admin
ADMIN_BOOTSTRAP_PASSWORD=change-me-in-production

AUTH_JWT_SECRET=generate-random-secret-at-least-32-chars
SESSION_COOKIE_NAME=itsdoc_session
SESSION_MAX_AGE_DAYS=30

# --- Documents ---
DOCS_ROOT=../../md

# --- ActiveCollab ---
ACTIVECOLLAB_TOKEN=your-activecollab-token
ACTIVECOLLAB_EMAIL=your-email@example.com
ACTIVECOLLAB_PASSWORD=your-activecollab-password
ACTIVECOLLAB_ACCOUNT_ID=your-account-id
ACTIVECOLLAB_CLIENT_NAME=its-doc
ACTIVECOLLAB_CLIENT_VENDOR=its.agency